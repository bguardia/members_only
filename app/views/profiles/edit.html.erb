<div class="section">
    <div class="columns">
        <div class="column is-half is-offset-one-quarter">
            <div class="box">
                <h2 class="title is-3">Edit profile</h2>
                <%= form_with model: @profile do |form| %>
                    <div class="field">
                        <div class="control">
                            <%= form.label :picture, class: "label" %>
                            <%= form.file_field :picture %>
                        </div>
                    </div>
                    
                    <div class="field">
                        <div class="control">
                            <%= form.label :bio, class: "label" %>
                            <%= form.text_area :bio, class: "input" %>
                        </div>
                    </div>

                    <div class="control">
                        <%= form.submit "Save", class: "button is-info" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
