<div class="box">
    <div class="block">
        <%= link_to post_path(post) do %>
            <h2 class="title"><%= post.title %></h2>
        <% end %>
            <span class="subtitle">Created by:&nbsp;
                <% if member_signed_in? %>
                    <%= link_to post.member.username, "#" %>
                <% else %>
                    Anonymous
                <% end %>
                &nbsp; <small><%= time_ago_in_words(post.created_at) + " ago" %></small>
            </span>
    </div>

    <% if local_assigns.has_key? :snippet %>
      <div class="panel-block"><%= post.snippet(400) %></div>
      <% if post.longer_than?(400) %>
        <div class="level panel-block">
            <%= link_to "More", post_path(post), class: "level-item" %>
        </div>
      <% end %>
    <% else %>
      <div class="panel-block"><%= post.body %></div>
    <% end %>

    <% if member_signed_in? %>
        <div class="level panel-block">
            <div class="level-item">
                <%= link_to "#" do %>
                    <span class="icon"><i class="far fa-thumbs-up"></i></span>
                <% end %>
            </div>
            <div class="level-item">
                <%= link_to "#" do %>
                    <span class="icon"><i class="far fa-comment-alt"></i></span>
                <% end %>
            </div>
            <% if post.member == current_member %>
                <div class="level-item">
                    <%= link_to edit_post_path(post) do %>
                        <span class="icon"><i class="far fa-edit"></i></span>
                    <% end %>
                </div>
                <div class="level-item">
                    <%= link_to post_path(post), method: :delete do %>
                        <span class="icon"><i class="far fa-trash-alt"></i></span>
                    <% end %>
                </div>
           <% end %>
        </div> 
    <% end %>

    
</div>